<h1>Edit Post<h1>

<% if @post.errors.any? %>
  <h2><%= @post.errors.count %> errors<h2>
    <% @post.errors.full_messages.each do |message|%>
      <li><%= message %></i>
    <% end %>
<% end %>

<%= form_for(@post) do |f| %>
  <label>Title:</label><br>
  <%= f.text_field :title %><br>

  <label>Content:</label><br>
  <%= f.text_field :content %><br>
  
  <label>Likes:</label><br>
  <%= f.number_field :likes %><br>

  <label>Blogger ID:</label><br>
  <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br>

  <label>Destination ID:</label><br>
  <%= f.collection_select :destination_id, Destination.all, :id, :name  %><br>

<%= f.submit %>
<% end %>